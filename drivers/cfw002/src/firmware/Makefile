INSTALL_PREFIX ?=
FIRMWARE_TARGET=cfw002_fw.bin
FIRMWARE_MD5_FILE=$(FIRMWARE_TARGET).md5
FIRMWARE_INSTALL_PATH=/lib/firmware

all: $(FIRMWARE_TARGET)
	md5sum $(FIRMWARE_TARGET) > $(FIRMWARE_MD5_FILE)

clean:
	-rm -f $(FIRMWARE_MD5_FILE)

install: $(FIRMWARE_TARGET)
	# firmware
	mkdir -p $(INSTALL_PREFIX)$(FIRMWARE_INSTALL_PATH)
	cp $(FIRMWARE_TARGET) $(INSTALL_PREFIX)$(FIRMWARE_INSTALL_PATH)/

uninstall:
	# firmware
	-rm -f $(INSTALL_PREFIX)$(FIRMWARE_INSTALL_PATH)/$(FIRMWARE_TARGET)
